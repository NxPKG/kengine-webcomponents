<div
		class="{{classes.root}}"
		tabindex="-1"
		@keydown={{_onkeydown}}
		@focusin="{{_onfocusin}}"
		@focusout="{{_onfocusout}}"
>
	{{#if _hasHoursSlider}}
		<kengine-wheelslider
				label = "{{hoursSliderTitle}}"
				._items="{{hoursArray}}"
				data-sap-focus-ref
				?expanded="{{_hoursSliderFocused}}"
				value="{{_hours}}"
				@kengine-select="{{onHoursChange}}"
				@click="{{selectSlider}}"
				@focusin="{{selectSlider}}"
				data-sap-slider="hours"
				cyclic
		></kengine-wheelslider>
	{{/if}}
	{{#if _hasMinutesSlider}}
		<kengine-wheelslider
				label = "{{minutesSliderTitle}}"
				._items="{{minutesArray}}"
				?expanded="{{_minutesSliderFocused}}"
				value="{{_minutes}}"
				@kengine-select="{{onMinutesChange}}"
				@click="{{selectSlider}}"
				@focusin="{{selectSlider}}"
				data-sap-slider="minutes"
				cyclic
		></kengine-wheelslider>
	{{/if}}
	{{#if _hasSecondsSlider}}
		<kengine-wheelslider
				label = "{{secondsSliderTitle}}"
				._items="{{secondsArray}}"
				?expanded="{{_secondsSliderFocused}}"
				value="{{_seconds}}"
				@kengine-select="{{onSecondsChange}}"
				@click="{{selectSlider}}"
				@focusin="{{selectSlider}}"
				data-sap-slider="seconds"
				cyclic
		></kengine-wheelslider>
	{{/if}}
	{{#if _hasPeriodsSlider}}
		<kengine-wheelslider
				label = "{{periodSliderTitle}}"
				._items="{{periodsArray}}"
				?expanded="{{_periodSliderFocused}}"
				value="{{_period}}"
				@kengine-select="{{onPeriodChange}}"
				@click="{{selectSlider}}"
				@focusin="{{selectSlider}}"
				data-sap-slider="periods"
		></kengine-wheelslider>
	{{/if}}
</div>
