<div>
	{{>include "./ListItem.hbs"}}

	{{> listItemPostContent}}
</div>

{{#*inline "listItemPreContent"}}
	<div
		class="kengine-li-tree-toggle-box"
		style="{{styles.preContent}}"
	>
		{{#if _showToggleButtonBeginning}}
			<kengine-icon
				part="toggle-icon"
				class="kengine-li-tree-toggle-icon"
				name="{{_toggleIconName}}"
				show-tooltip
				accessible-name="{{iconAccessibleName}}"
				@click="{{_toggleClick}}"
			></kengine-icon>
		{{/if}}
	</div>
{{/inline}}

{{#*inline "listItemContent"}}
{{/inline}}

{{#*inline "imageBegin"}}{{/inline}}

{{#*inline "iconBegin"}}
	{{#if icon}}
		<kengine-icon part="icon" name="{{icon}}" class="kengine-li-icon"></kengine-icon>
	{{/if}}
{{/inline}}

{{#*inline "iconEnd"}}
	{{#if _showToggleButtonEnd}}
		<kengine-icon
			part="toggle-icon"
			class="kengine-li-tree-toggle-icon"
			name="{{_toggleIconName}}"
			@click="{{_toggleClick}}"
		></kengine-icon>
	{{/if}}
{{/inline}}

{{#*inline "listItemPostContent"}}
	{{#if expanded}}
		<ul
			role="group"
			id="{{_id}}-subtree"
			class="kengine-tree-li-subtree"
		>
			<slot></slot>
		</ul>
	{{/if}}
{{/inline}}