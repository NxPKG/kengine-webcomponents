{{#if domRendered}}
	<div class="kengine-toast-root"
		role="alert"
		style="{{styles.root}}"
		tabindex="{{_tabindex}}"
		@focusin="{{_onfocusin}}"
		@focusout="{{_onfocusout}}"
		@keydown="{{_onkeydown}}"
		@mouseover="{{_onmouseover}}"
		@mouseleave="{{_onmouseleave}}"
		@transitionend="{{_ontransitionend}}">
		<bdi>
			<slot></slot>
		</bdi>
	</div>
{{/if}}
