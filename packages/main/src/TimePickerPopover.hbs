<kengine-responsive-popover
	id="{{_id}}-responsive-popover"
	class="kengine-time-picker-popover"
	placement-type="Bottom"
	horizontal-align="Left"
	allow-target-overlap
	_hide-header
	hide-arrow
	@kengine-after-open="{{onResponsivePopoverAfterOpen}}"
	@kengine-after-close="{{onResponsivePopoverAfterClose}}"
	@wheel="{{_handleWheel}}"
	@keydown="{{_onkeydown}}"
>

	<kengine-time-selection-clocks
		id="{{_id}}-time-sel"
		value="{{_timeSelectionValue}}"
		format-pattern="{{_formatPattern}}"
		@kengine-change="{{onTimeSelectionChange}}"
		@close-picker="{{submitPickers}}"
	></kengine-time-selection-clocks>

	<div slot="footer" class="kengine-time-picker-footer" @keydown={{_onfooterkeydown}}>
		<kengine-button id="submit" design="Emphasized" @click="{{submitPickers}}">{{submitButtonLabel}}</kengine-button>
		<kengine-button id="close" design="Transparent" @click="{{closePicker}}">{{cancelButtonLabel}}</kengine-button>
	</div>
</kengine-responsive-popover>

{{#if _isPhone}}
<kengine-popover
	id="{{_id}}-popover"
	class="kengine-time-picker-inputs-popover"
	placement-type="Bottom"
	horizontal-align="Left"
	allow-target-overlap
	_hide-header
	hide-arrow
	@kengine-after-open="{{onInputsPopoverAfterOpen}}"
	@kengine-after-close="{{onInputsPopoverAfterClose}}"
	@wheel="{{_handleWheel}}"
	@keydown="{{_onkeydown}}"
>
	<div class="popover-content">
		<kengine-time-selection-inputs
			id="{{_id}}-time-sel-inputs"
			value="{{_timeSelectionValue}}"
			format-pattern="{{_formatPattern}}"
			@kengine-change="{{onTimeSelectionChange}}"
			@close-inputs="{{submitInputsPopover}}"
		></kengine-time-selection-inputs>
	</div>

	<div slot="footer" class="kengine-time-picker-footer" @keydown={{_onfooterkeydown}}>
		<kengine-button id="submitInputs" design="Emphasized" @click="{{submitInputsPopover}}">{{submitButtonLabel}}</kengine-button>
		<kengine-button id="closeInputs" design="Transparent" @click="{{closeInputsPopover}}">{{cancelButtonLabel}}</kengine-button>
	</div>
</kengine-popover>
{{/if}}