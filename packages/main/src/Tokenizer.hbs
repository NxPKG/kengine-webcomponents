<div class="{{classes.wrapper}}">
	<span id="{{_id}}-hiddenText" class="kengine-hidden-text">{{tokenizerLabel}}</span>

	<div
		class="{{classes.content}}"
		@kengine-delete="{{_delete}}"
		@click="{{_click}}"
		@mousedown="{{_onmousedown}}"
		@keydown="{{_onkeydown}}"
		@kengine-select="{{onTokenSelect}}"
		role="listbox"
		aria-labelledby="{{_id}}-hiddenText"
	>
		{{#each tokens}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	</div>

	{{#if showNMore}}
		<span
			@click="{{_openMorePopoverAndFireEvent}}"
			class="kengine-tokenizer-more-text"
			part="n-more-text"
		>{{_nMoreText}}</span>
	{{/if}}
</div>