<section dir="{{effectiveDir}}" class="kengine-color-picker-root"  >
    <div
        class="kengine-color-picker-main-color"
        style="{{styles.mainColor}}"
        @mousedown="{{_handleMouseDown}}"
        @mouseup="{{_handleMouseUp}}"
        @mousemove="{{_handleMouseMove}}"
        @mouseout="{{_handleMouseOut}}"
    >
        <div
            class="kengine-color-picker-circle"
            style="{{styles.circle}}"
        ></div>
    </div>

    <div class="kengine-color-picker-sliders-wrapper">
        <kengine-slider
            disabled="{{inputsDisabled}}"
            class="kengine-color-picker-hue-slider"
            min="0"
            max="1530"
            value="{{_hue}}"
            accessible-name="{{hueSliderLabel}}"
            @kengine-input="{{_handleHueInput}}"
        ></kengine-slider>
        <kengine-slider
            disabled="{{inputsDisabled}}"
            class="kengine-color-picker-alpha-slider"
            min="0"
            max="1"
            step="0.01"
            value="{{_alpha}}"
            accessible-name="{{alphaSliderLabel}}"
            @kengine-input="{{_handleAlphaInput}}"
        ></kengine-slider>
    </div>

    <div class="kengine-color-picker-current-color">
        <div class="kengine-color-picker-colors-wrapper">
            <span class="kengine-color-picker-white"></span>
            <span class="kengine-color-picker-color">
                <div class="kengine-color-picker-color-inner" style="{{styles.colorSpan}}"></div>
            </span>
        </div>

        <div class="kengine-color-picker-hex-input-wrapper">
            <kengine-label>Hex</kengine-label>
            <kengine-input
                class="kengine-color-picker-hex-input"
                value="{{hex}}"
                @keydown="{{_onkeydown}}"
                accessible-name="{{hexInputLabel}}"
                @kengine-change="{{_handleHEXChange}}"
                value-state="{{hexInputErrorState}}"
            ></kengine-input>
        </div>
    </div>

    <div
        class="kengine-color-picker-rgb-wrapper"
        @kengine-change="{{_handleRGBInputsChange}}"
    >
        <div class="kengine-color-picker-rgb">
            <kengine-input
                id="red"
                class="kengine-color-picker-rgb-input"
                disabled="{{inputsDisabled}}"
                accessible-name="{{redInputLabel}}"
                value="{{_color.r}}"
            ></kengine-input>
            <kengine-label>R</kengine-label>
        </div>
        <div class="kengine-color-picker-rgb">
            <kengine-input
                id="green"
                class="kengine-color-picker-rgb-input"
                disabled="{{inputsDisabled}}"
                accessible-name="{{greenInputLabel}}"
                value="{{_color.g}}"
            ></kengine-input>
            <kengine-label>G</kengine-label>
        </div>
        <div class="kengine-color-picker-rgb">
            <kengine-input
                id="blue"
                class="kengine-color-picker-rgb-input"
                disabled="{{inputsDisabled}}"
                accessible-name="{{blueInputLabel}}"
                value="{{_color.b}}"
            ></kengine-input>
            <kengine-label>B</kengine-label>
        </div>
        <div class="kengine-color-picker-rgb">
            <kengine-input
				id="alpha"
                disabled="{{inputsDisabled}}"
                class="kengine-color-picker-rgb-input"
                value="{{_alpha}}"
                accessible-name="{{alphaInputLabel}}"
                @kengine-input="{{_handleAlphaInput}}"
                @kengine-change="{{_handleAlphaChange}}"
            ></kengine-input>
            <kengine-label>A</kengine-label>
        </div>
    </div>
</section>
