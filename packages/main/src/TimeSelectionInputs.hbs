	<div
		class="kengine-time-selection-inputs"
		@keydown="{{_onkeydown}}"
	>
	{{#each _entities}}
		{{#if this.hasSeparator}}
		<span separator>:</span>
		{{/if}}
		<kengine-input
			id="{{../_id}}_input_{{this.entity}}"
			data-sap-input="{{this.entity}}"
			type="{{../_numberType}}"
			maxlength="2"
			autocomplete="off"
			pattern="[0-9]*"
			inputmode="numeric"
			class="kengine-time-selection-numeric-input"
			.value="{{this.stringValue}}"
			.accessibleName="{{this.label}}"
			._nativeInputAttributes={{this.attributes}}
			@focusin={{../_onfocusin}}
			@focusout={{../_onfocusout}}
			@kengine-input={{../_oninput}}
		></kengine-input>
	{{/each}}
	{{#if _periods.length}}
		<span separator> </span>
		<kengine-segmented-button
			id="{{_id}}_AmPm"
			@click={{_periodChange}}
		>
		{{#each _periods}}
    		<kengine-segmented-button-item
				?pressed={{this.pressed}}
			>
			{{this.label}}
			</kengine-segmented-button-item>
		{{/each}}
		</kengine-segmented-button>
	{{/if}}
	</div>