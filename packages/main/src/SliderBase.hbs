<div
	class="kengine-slider-root {{classes.root}}"
	@mousedown="{{_onmousedown}}"
	@touchstart="{{_ontouchstart}}"
	@mouseover="{{_onmouseover}}"
	@mouseout="{{_onmouseout}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	part="root-container"
>
	{{> handlesAriaText}}

	<div class="kengine-slider-inner">
		{{#if step}}
			{{#if showTickmarks}}
				<ul class="kengine-slider-tickmarks">
					{{#each tickmarksObject}}
						{{#if this}}
							<li class="kengine-slider-tickmark kengine-slider-tickmark-in-range"></li>
						{{else}}
							<li class="kengine-slider-tickmark"></li>
						{{/if}}
					{{/each}}
				</ul>
				{{#if labelInterval}}
					<ul class="kengine-slider-labels {{classes.labelContainer}}" style="{{styles.labelContainer}}">
						{{#each _labels}}
							<li style="{{../styles.label}}">{{this}}</li>
						{{/each}}
					</ul>
				{{/if}}
			{{/if}}
		{{/if}}

		{{> progressBar}}

		{{> handles}}
	</div>

	<span id="{{_id}}-accName" class="kengine-hidden-text">{{accessibleName}}</span>
	<span id="{{_id}}-sliderDesc" class="kengine-hidden-text">{{_ariaLabelledByText}}</span>
</div>


{{#*inline "handlesAriaText"}}{{/inline}}
{{#*inline "progressBar"}}{{/inline}}
{{#*inline "handles"}}{{/inline}}
