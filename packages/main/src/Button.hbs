<button
	type="button"
	class="kengine-button-root"
	?disabled="{{disabled}}"
	data-sap-focus-ref
	{{> ariaPressed}}
	@focusout={{_onfocusout}}
	@focusin={{_onfocusin}}
	@click={{_onclick}}
	@mousedown={{_onmousedown}}
	@mouseup={{_onmouseup}}
	@keydown={{_onkeydown}}
	@keyup={{_onkeyup}}
	@touchstart="{{_ontouchstart}}"
	@touchend="{{_ontouchend}}"
	tabindex={{tabIndexValue}}
	aria-expanded="{{accessibilityAttributes.expanded}}"
	aria-controls="{{accessibilityAttributes.controls}}"
	aria-haspopup="{{accessibilityAttributes.hasPopup}}"
	aria-label="{{ariaLabelText}}"
	title="{{buttonTitle}}"
	part="button"
>
	{{#if icon}}
		<kengine-icon
			class="kengine-button-icon"
			name="{{icon}}"
			accessible-role="{{iconRole}}"
			part="icon"
			?show-tooltip={{showIconTooltip}}
		></kengine-icon>
	{{/if}}

	<span id="{{_id}}-content" class="kengine-button-text">
		<bdi>
			<slot></slot>
		</bdi>
	</span>

	{{#if hasButtonType}}
		<span class="kengine-hidden-text">{{buttonTypeText}}</span>
	{{/if}}
</button>

{{#*inline "ariaPressed"}}{{/inline}}
